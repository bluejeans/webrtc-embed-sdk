{
    "compilerOptions": {
        "outDir": "./output/",
        "noImplicitAny": false,
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "*": [
				"*",
				"node_modules/*",
				"node_modules/@types/*",
            ]
          }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
		"src/**/*"
    ]
}